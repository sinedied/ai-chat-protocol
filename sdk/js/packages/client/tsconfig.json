{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "build",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "lib": [
      "ESNext",
      "DOM"
    ]
  }
}
